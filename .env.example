# ==================================
# AI Receptionist Environment Variables
# ==================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==================================
# APPLICATION SETTINGS
# ==================================
FLASK_ENV=development
PORT=5000

# Public URLs (update these after deployment)
PUBLIC_URL=http://localhost:5000
WS_PUBLIC_URL=ws://localhost:5000/media
WS_PATH=/media

# ==================================
# DATABASE
# ==================================
# Local Development: SQLite (automatic, no config needed)
# Production: PostgreSQL on Render (get from Render Dashboard → Database → External Database URL)
# DATABASE_URL=postgresql://user:password@host.render.com:5432/database_name

# ==================================
# CLOUDFLARE R2 STORAGE (Optional)
# ==================================
# For storing images and files
# R2_ACCOUNT_ID=your_cloudflare_account_id
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=your_bucket_name
# R2_PUBLIC_URL=https://yourbucket.yourdomain.com

# ==================================
# API KEYS
# ==================================

# OpenAI (Required)
OPENAI_API_KEY=sk-proj-...

# Deepgram (Required for voice)
DEEPGRAM_API_KEY=...

# ElevenLabs (Required for TTS)
ELEVENLABS_API_KEY=sk_...
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
ELEVENLABS_FALLBACK_VOICE_ID=29vD33N1CtxCmqQRPOHJ

# Twilio (Required for phone calls)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...

# Stripe (Required for payments)
STRIPE_SECRET_KEY=sk_live_... or sk_test_...

# ==================================
# GOOGLE CALENDAR
# ==================================
GOOGLE_CALENDAR_API_KEY=AIzaSy...
GOOGLE_CALENDAR_CREDENTIALS=config/credentials.json
GOOGLE_CALENDAR_TOKEN=config/token.json
GOOGLE_CALENDAR_ID=primary
CALENDAR_TIMEZONE=Europe/Dublin

# ==================================
# AI MODEL SETTINGS
# ==================================
CHAT_MODEL=gpt-4o-mini
TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE=alloy
TTS_PROVIDER=elevenlabs

# ==================================
# VOICE ACTIVITY DETECTION (VAD)
# ==================================
VAD_END_SILENCE_MS=1200
VAD_MIN_SPEECH_MS=400
VAD_START_ENERGY=1200
VAD_CONTINUE_ENERGY=900

# ==================================
# MEDIA HANDLER - SPEECH DETECTION
# ==================================
SPEECH_ENERGY=1600
SILENCE_ENERGY=1000
SILENCE_HOLD=0.7

# ==================================
# MEDIA HANDLER - INTERRUPTION
# ==================================
INTERRUPT_ENERGY=3600
NO_BARGEIN_WINDOW=1.5
BARGEIN_HOLD=0.4

# ==================================
# POST-TTS AND SPEECH PROCESSING
# ==================================
POST_TTS_IGNORE=0.05
MIN_WORDS=1

# ==================================
# SECURITY (Auto-generated if not set)
# ==================================
# SECRET_KEY=generate_a_random_secret_key_here
